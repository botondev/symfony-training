{% extends 'JobZBundle::layout.html.twig' %}
{% block title %}Post a Job{% endblock %}
{% block content %}
    <div class="content">
        <h1>
            Post a Job
        </h1>

        {{ form_start(form) }}
            <table id="job_form">
                <tfoot>
                <tr>
                    <td colspan="2">
                        <input value="Post your job" type="submit">
                    </td>
                </tr>
                </tfoot>
                <tbody>
                <tr>
                    <th>
                        {{ form_label(form.category) }}
                    </th>
                    <td>
                        {{ form_widget(form.category) }}
                    </td>
                </tr>
                <tr>
                    <th>
                        {{ form_label(form.jobType) }}
                    </th>
                    <td>
                        {{ form_widget(form.jobType) }}
                    </td>
                </tr>
                <tr>
                    <th>
                        {{ form_label(form.company) }}
                    </th>
                    <td>
                        {{ form_widget(form.company) }}
                    </td>
                </tr>
                <tr>
                    <th>
                        {{ form_label(form.url) }}
                    </th>
                    <td>
                        {{ form_widget(form.url) }}
                    </td>
                </tr>
                <tr>
                    <th>
                        {{ form_label(form.position) }}
                    </th>
                    <td>
                        {{ form_widget(form.position, {'attr': {'rows':4, 'cols':30}}) }}
                    </td>
                </tr>
                <tr>
                    <th>
                        {{ form_label(form.location) }}
                    </th>
                    <td>
                        {{ form_widget(form.location) }}
                    </td>
                </tr>
                <tr>
                    <th>
                        {{ form_label(form.description) }}
                    </th>
                    <td>
                        {{ form_widget(form.description, {'attr': {'rows':4, 'cols':30}}) }}
                    </td>
                </tr>
                <tr>
                    <th>
                        {{ form_label(form.howToApply) }}
                    </th>
                    <td>
                        {{ form_widget(form.howToApply, {'attr': {'rows':4, 'cols':30}}) }}
                    </td>
                </tr>
                <tr>
                    <th>
                        <label for="job_email">Email</label>
                    </th>
                    <td>
                        {{ app.user.email }}
                    </td>
                </tr>
                </tbody>
            </table>
        <div style="display:none">
            {{ form_widget(form.created) }}
            {{ form_widget(form.user) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
