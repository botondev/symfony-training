{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/jobz/css/main.css') }}"
{% endblock %}

{% block body %}
    <div id="container">
        <div id="header">
            <div class="nav">
                <ul>
                    <li><a href="login.html">Login</a></li>
                    <li><a href="registration.html">Registration</a></li>
                </ul>
            </div>
            <div class="nav-menu">
                <ul>
                    <li><a href="information.html">About us</a></li>
                    <li><a href="information.html">Posting a job</a></li>
                    <li><a href="information.html">Became a member</a></li>
                </ul>
            </div>
            <div class="clearfix"></div>
            <div class="content">
                <h1>
                    <a href="index.html"><img src="{{ asset('bundles/jobz/images/jobz.gif') }}"></a>
                </h1>
                <div id="sub_header">
                    <div class="post">
                        <h2>
                            Ask for people
                        </h2>
                        <div>
                            <a href="post.html">Change me | Post a Job</a>
                        </div>
                    </div>
                    <div class="search">
                        <img src="{{ asset('bundles/jobz/images/ask.png') }}" alt="ask">
                        <h2>
                            Ask for a job
                        </h2>
                        <form action="" method="get">
                            <input name="keywords" id="search_keywords" class="input" type="text"><input value="search" src="{{ asset('bundles/jobz/images/search.png') }}" class="but_search" type="image">
                            <div class="help">
                                Change me | I am a template yet | Enter some keywords (city, country, position, ...)
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div id="content">
        {% block content %}{% endblock %}
        </div>
        <div id="footer">
            <div class="content">
                <ul>
                    <li>
                        <a href="information.html">Change me | About us</a>
                    </li>
                    <li class="feed">
                        <a href="information.html">Change me | Contact</a>
                    </li>
                    <li>
                        <a href="information.html">Change me | JobZ API</a>
                    </li>
                    <li class="last">
                        <a href="information.html">Change me | Affiliates</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}